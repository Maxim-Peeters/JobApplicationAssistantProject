{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Image",
      "url": "https://your-updated-image-url.com",
      "size": "stretch"
    },
    {
      "type": "TextBlock",
      "spacing": "medium",
      "size": "large",
      "weight": "bolder",
      "text": "Welcome to the Job Bot!",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "size": "default",
      "isSubtle": true,
      "text": "I can help you find job openings and track your applications. Let's get started!",
      "wrap": true
    }
  ],
 
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Show all jobs",
      "data": { "action": "SearchJobs" }
    },
    {
      "type": "Action.Submit",
      "title": "Check application status",
      "data": { "action": "CheckApplicationStatus" }
    },
   
  ]
}