{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Image",
      "url": "https://your-updated-image-url.com",
      "size": "stretch",
      "altText": "Welcome Image"
    },
    {
      "type": "TextBlock",
      "spacing": "medium",
      "size": "large",
      "weight": "bolder",
      "text": "Welcome to the Job Application Assistant!",
      "wrap": true,
      "horizontalAlignment": "center",
      "color": "accent"
    },
    {
      "type": "TextBlock",
      "spacing": "small",
      "size": "default",
      "isSubtle": true,
      "text": "I can help you find job openings, submit applications, and track their status. What would you like to do?",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "spacing": "medium",
      "size": "default",
      "weight": "bolder",
      "text": "You can type 'cancel' to stop, when interacting with the application.",
      "wrap": true,
      "color": "good"
    }
  ],
  "backgroundImage": {
    "url": "https://your-background-image-url.com",
    "fillMode": "cover"
  }
}